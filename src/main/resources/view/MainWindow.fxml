<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root height="650.0" minHeight="650.0" minWidth="860.0" onCloseRequest="#handleExit" title="Vaccination Management System" type="javafx.stage.Stage" width="860.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/vms_icon_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>
            <VBox fx:id="resultDisplayPlaceholder" VBox.vgrow="NEVER">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding></VBox>
            <HBox alignment="TOP_CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
               <children>

              <VBox maxWidth="-Infinity" minWidth="-Infinity" styleClass="pane-with-border" HBox.hgrow="SOMETIMES">
                <StackPane fx:id="patientListPanelPlaceholder" prefWidth="410.0" VBox.vgrow="ALWAYS" />
              </VBox>
                  <VBox maxWidth="-Infinity" minWidth="-Infinity" styleClass="pane-with-border" HBox.hgrow="NEVER">
                     <children>
                        <StackPane fx:id="vaxTypeListPanelPlaceholder" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="410.0" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </HBox>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
